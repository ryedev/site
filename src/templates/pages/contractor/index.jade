          label(for='entry_1835488332') GitHub Profile Link
          input(type='text', name='entry.1835488332', value='', aria-label='', aria-required='true', required='')
        .small-12.medium-6.end.column
          label(for='entry_1221814373') Asking Hourly Rate
          input(type='text', name='entry.1221814373', value='', aria-label='Asking hourly rate ', aria-required='true', required='')
